<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gitintheshell.geometrics.PolygonClipping">

    <com.gitintheshell.geometrics.clipping.PolygonClippingView
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <CheckBox
        android:checked="true"
        android:text="Показывать первый полигон"
        android:id="@+id/show_first_poly"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:checked="true"
        android:text="Показывать второй полигон"
        android:id="@+id/show_second_poly"
        android:layout_below="@id/show_first_poly"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:checked="true"
        android:text="Показывать пересечение"
        android:id="@+id/show_intersection"
        android:layout_below="@id/show_second_poly"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
