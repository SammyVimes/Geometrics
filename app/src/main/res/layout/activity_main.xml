<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.gitintheshell.geometrics.MainActivity">

    <Button
        android:id="@+id/start_triangulation"
        android:text="Триангуляция"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/start_convex"
        android:text="Выпуклая плоскость"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/start_polygon"
        android:text="Пересечение полигонов"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
